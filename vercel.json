{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/public/index.php",
            "use": "vercel-php@0.7.1"
        }
    ],
    "rewrites": [
        {
            "source": "/api",
            "destination": "/backend/public/index.php"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/frontend/$1"
        }
    ]
}